<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xsi:schemaLocation="http://niftygui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    <!-- Nifty XML content goes in here -->
    <screen id="game" controller="streetmap.gui.controller.GameScreenController"
            inputMappingPre="streetmap.gui.inputmapping.MenuInputMapping">
        <layer id="debug_layer" childLayout="horizontal" valign="bottom">
            <panel valign="bottom" align="right" childLayout="center" id="fps" height="100" width="300"
                   backgroundColor="#ff0027">
                <text font="aurulent-sans-16.fnt" color="#ffff"
                      text="FPS"/>
                <effect>
                    <onActive name="framepanel" post="true"/>
                </effect>
            </panel>
            <panel valign="bottom" align="right" childLayout="center" id="carflow" height="100" width="300"
                   backgroundColor="#06840d">
                <text font="aurulent-sans-16.fnt" color="#ffff"
                      text="#Cars"/>
                <effect>
                    <onActive name="carpanel" post="true"/>
                </effect>
            </panel>
            <panel valign="bottom" align="right" childLayout="center" id="cars" height="100" width="300"
                   backgroundColor="#0010ff">
                <text font="aurulent-sans-16.fnt" color="#ffff"
                      text="Flow"/>
                <effect>
                    <onActive name="flowpanel" post="true"/>
                </effect>
            </panel>
            <panel valign="bottom" align="right" childLayout="center" id="paths" height="100" width="300"
                   backgroundColor="#ff691017">
                <text font="aurulent-sans-16.fnt" color="#ffff"
                      text="Paths requested"/>
                <effect>
                    <onActive name="pathpanel" post="true"/>
                </effect>
            </panel>
        </layer>
        <layer id="game_layer" childLayout="horizontal" align="right">
            <panel align="right" width="200" height="50" childLayout="center" backgroundColor="#3973FF"
                   style="border: 1px solid #fff">
                <text font="aurulent-sans-16.fnt" color="#ffff"
                      text="Menu"/>
                <interact onClick="activateScreenAndPause(menu)"/>
            </panel>
            <panel id="Placeables" align="left" width="100px" height="100%" childLayout="vertical" backgroundColor="#3973FF">
            </panel>
        </layer>
    </screen>
    <screen id="menu" controller="streetmap.gui.controller.MenuScreenController"
            inputMappingPre="streetmap.gui.inputmapping.MenuInputMapping">
        <layer childLayout="center">
            <panel backgroundColor="#ff1330" childLayout="vertical">
                <panel childLayout="center">
                    <text font="aurulent-sans-16.fnt" color="#ffff"
                          text="New Game"/>
                    <interact onClick="newGame()"/>
                </panel>
                <panel childLayout="center">
                    <text font="aurulent-sans-16.fnt" color="#ffff"
                          text="Save"/>
                    <interact onClick="activateScreen(save)"/>
                </panel>
                <panel childLayout="center">
                    <text font="aurulent-sans-16.fnt" color="#ffff"
                          text="Load"/>
                    <interact onClick="activateScreen(load)"/>
                </panel>
                <panel childLayout="center">
                    <text font="aurulent-sans-16.fnt" color="#ffff"
                          text="Debug"/>
                    <interact onClick="activateScreen(debug)"/>
                </panel>

                <panel childLayout="center">
                    <text font="aurulent-sans-16.fnt" color="#ffff"
                          text="Return to Game"/>
                    <interact onClick="activateScreenAndUnpause(game)"/>
                </panel>

            </panel>
        </layer>
    </screen>

    <screen id="save" controller="streetmap.gui.controller.SaveScreenController"
            inputMappingPre="streetmap.gui.inputmapping.MenuInputMapping">
        <layer childLayout="center">
            <panel childLayout="vertical">
                <control id="name" name="textfield" maxLength="20" width="200"/>
                <panel childLayout="horizontal">
                    <control id="back" name="button" label="Back">
                        <interact onClick="activateScreen(menu)"/>
                    </control>
                    <control id="save" name="button" label="Save">
                        <interact onClick="save()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="load" controller="streetmap.gui.controller.LoadScreenController" inputMapping="street"
            inputMappingPre="streetmap.gui.inputmapping.MenuInputMapping">
        <layer childLayout="center">
            <panel childLayout="vertical" width="50%">
                <control id="loadbox" name="listBox" vertical="optional" displayItems="6" horizontal="optional"
                         selection="single"/>
                <panel childLayout="horizontal">
                    <control id="back" name="button" label="Back">
                        <interact onClick="activateScreen(menu)"/>
                    </control>
                    <control id="save" name="button" label="Load">
                        <interact onClick="load()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="debug" controller="streetmap.gui.controller.DebugScreenController"
            inputMappingPre="streetmap.gui.inputmapping.MenuInputMapping">
        <layer childLayout="center">
            <panel childLayout="vertical">
                <panel childLayout="horizontal">
                    <text font="aurulent-sans-16.fnt" color="#ffff"
                          text="Number of Cars"/>
                    <control id="numOfCars" name="textfield" maxLength="20" width="200"/>
                </panel>
                <panel childLayout="horizontal">
                    <text font="aurulent-sans-16.fnt" color="#ffff"
                          text="Simulate Night"/>
                    <control id="night" name="checkbox"/>
                </panel>
                <panel childLayout="horizontal">
                    <text font="aurulent-sans-16.fnt" color="#ffff"
                          text="Heatmap Modifier"/>
                    <control id="heatMod" name="textfield" maxLength="20" width="200"/>
                </panel>
                <panel childLayout="horizontal">
                    <control id="back" name="button" label="Back">
                        <interact onClick="activateScreen(menu)"/>
                    </control>
                    <control id="save" name="button" label="Save">
                        <interact onClick="save()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>