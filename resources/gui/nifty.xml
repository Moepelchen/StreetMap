<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns:xsi="http://
www.w3.org/2001/XMLSchema-instance" xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xsi:schemaLocation="http://niftygui.
sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- Nifty XML content goes in here -->
    <screen id="game" controller="streetmap.gui.controller.GameScreenController">
        <layer id="debug_layer" childLayout="horizontal" valign="bottom">
            <panel valign="bottom" align="right" childLayout="center"  id="fps" height="100" width="300" backgroundColor="#ff0027">
                <text font="aurulent-sans-16.fnt" color="#ffff"
                                     text="FPS"/>
                <effect>
                    <onActive name="framepanel" post="true" />
                </effect>
            </panel>
            <panel valign="bottom" align="right"  childLayout="center"  id="carflow" height="100" width="300" backgroundColor="#06840d">
                <text font="aurulent-sans-16.fnt" color="#ffff"
                             text="#Cars"/>
                <effect>
                    <onActive name="carpanel" post="true" />
                </effect>
            </panel>
            <panel valign="bottom"  align="right" childLayout="center"  id="cars" height="100" width="300" backgroundColor="#0010ff">
                <text font="aurulent-sans-16.fnt" color="#ffff"
                                     text="Flow"/>
                <effect>
                    <onActive name="flowpanel" post="true" />
                </effect>
            </panel>
        </layer>
        <layer id="game_layer" childLayout="vertical" align="right">
            <panel align="right" width="200" height="50" childLayout="center" backgroundColor="#3973FF"
                   style="border: 1px solid #fff">
                <text font="aurulent-sans-16.fnt" color="#ffff"
                      text="Menu">
                    <interact onClick="activateMenu()"></interact>                      </text>
            </panel>
        </layer>
    </screen>

    <screen id="menu" controller="streetmap.gui.controller.MenuScreenController">
        <layer childLayout="center">
            <panel backgroundColor="#ff1330" childLayout="vertical">
                <panel childLayout="center">
                    <text font="aurulent-sans-16.fnt" color="#ffff"
                          text="Save"/>
                </panel>
                <panel childLayout="center">
                    <text font="aurulent-sans-16.fnt" color="#ffff"
                          text="Load"/>
                </panel>

                <panel childLayout="center">
                    <text font="aurulent-sans-16.fnt" color="#ffff"
                          text="Return to Game">
                        <interact onClick="unPause()"/>
                          </text>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>